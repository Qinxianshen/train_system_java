<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.qin.train.pojo.TrainStation" table="train_station">
        <composite-id>
            <key-property name="trainId" column="train_id"/>
            <key-property name="stationId" column="station_id"/>
        </composite-id>
        <property name="distance" column="distance"/>
        <property name="arriveTime" column="arrive_time"/>
        <property name="leaveTime" column="leave_time"/>
    </class>
</hibernate-mapping>